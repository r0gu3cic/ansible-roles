[{{phpmyadmin_subdomain}}]
user = {{web_username}}
group = {{web_username}}
listen = /var/run/php/php{{php_version}}-fpm-{{phpmyadmin_subdomain}}.sock
listen.owner = www-data
listen.group = www-data
pm = dynamic 
pm.max_children = 20 
pm.start_servers = 2 
pm.min_spare_servers = 1 
pm.max_spare_servers = 3
pm.process_idle_timeout = 10s
request_terminate_timeout = 300
request_terminate_timeout = 300
;;;;; overwrite runtime config ;;;;;
;dissable access to files through URL
php_admin_flag[allow_url_fopen] = off
;dissable this functions
php_admin_value[disable_functions] = exec,passthru,shell_exec,system
;hide errors from users
php_admin_flag[display_errors] = off
;log errors please
php_admin_flag[log_errors] = on
;log all errors
php_admin_value[error_reporting] = E_ALL
;log errors here
php_admin_value[error_log] = /home/{{web_username}}/logs/php-fpm/{{phpmyadmin_subdomain}}.log